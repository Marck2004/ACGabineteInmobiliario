---
import WhatsappSvg from "@/assets/svg/Whatsapp-svg.astro";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

const {
  title = "AC Gabinete Inmobiliario - Inmobiliaria en Toledo",
  description = "Compra, venta y alquiler de inmuebles en Toledo. Asesoramiento profesional y amplio catálogo de propiedades.",
  image = "https://www.acgabineteinmobiliario.es/logo-landing.webp",
  url = Astro.url.href,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <!-- SEO Básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <ClientRouter />
    <script>
      import { run } from "vanilla-cookieconsent";
      import { config } from "@/utils/cookieconsent-config";
      import "vanilla-cookieconsent/dist/cookieconsent.css";
      run(config);
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QH4F0GEKNW"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-QH4F0GEKNW");
    </script>
  </head>

  <body class="body">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <div class="flex fixed right-10 bottom-10 z-50 gap-5">
      <!-- <GoogleSvg /> -->
      <WhatsappSvg />
    </div>
  </body>
</html>
