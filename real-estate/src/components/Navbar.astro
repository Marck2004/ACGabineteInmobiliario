---

import AngleDown from "../assets/svg/Angle-down.astro";
import IconoLandig from "../assets/svg/IconoLandig.astro";
---

<nav id="header" class="fixed w-full z-30 text-white">
    <div class="w-full justify-between container mx-auto flex flex-wrap items-center mt-0 pt-2 pb-4">
      <div class="flex items-center pl-4">
        <a class="toggleColour w-2xs flex justify-end text-white no-underline hover:no-underline font-bold text-2xl lg:text-4xl" href="#">
          <IconoLandig />
        </a>
      </div>
      <div class="block lg:hidden pr-4">
        <button id="nav-toggle" class="flex items-center p-1 text-pink-800 hover:text-gray-900 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
          <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
          </svg>
        </button>
      </div>
      <div class="w-full flex-grow lg:!flex justify-end lg:items-center lg:w-auto hidden mt-2 lg:mt-0 bg-white lg:bg-transparent text-black p-4 lg:p-0 z-20" id="nav-content">
        <ul class="list-reset lg:flex justify-end flex-1 items-center gap-4">
          <li id="nav-child" class="group mr-3">
            <a class="flex gap-2 py-2 px-4 text-black hover:font-bold no-underline transition-all duration-200" href="#">Inmuebles <AngleDown/></a>
            <ul id="nav-hover" class="group-hover:block hidden shadow-lg lg:absolute bg-white gray-700 lg:rounded-2xl w-[12%] items-center">
              <li class="hover:bg-gray-100 cursor-pointer pr-4 pb-2 pt-2 pl-2 hover:font-bold no-underline transition-all duration-200"><a class="w-full">Últimos inmuebles</a></li>
              <li class="hover:bg-gray-100 cursor-pointer pr-4 pb-2 pt-2 pl-2 hover:font-bold no-underline transition-all duration-200"><a>Ventas</a></li>
            </ul>
          </li>
          <li class="mr-3">
            <a class="flex gap-4 py-2 px-4 text-black no-underline hover:font-bold transition-all duration-200" href="#">Secciones <AngleDown/></a>
          </li>
          <li class="mr-3">
            <a class="inline-block py-2 px-4 text-black no-underline hover:text-gray-800 hover:font-bold transition-all duration-200" href="#">Valora tu inmueble</a>
          </li>
          <li class="mr-3">
            <a class="inline-block py-2 px-4 text-black no-underline hover:text-gray-800 hover:font-bold transition-all duration-200" href="#">Contacto</a>
          </li>
        </ul>
      </div>
    </div>
    <hr class="border-b border-gray-100  my-0 py-0" />
  </nav>

