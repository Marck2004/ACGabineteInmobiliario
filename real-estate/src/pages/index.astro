---
import Layout from "@/layouts/Layout.astro";
import bgImg from "@/assets/logo-landing.webp";
import MembersCard from "@/components/MembersCard.astro";
---

<style>
	button,
	input {
		padding: 2%;
	}
</style>

<Layout>
	<div class="mb-0 relative">
		<div class="container m-auto items-center">
			<div class="relative bg-white">
				<img
					src={bgImg.src}
					class="w-full h-full object-cover opacity-30 p-6"
				/>
				<div
					class="grid grid-cols-2 items-center absolute inset-0 bg-black/60 rounded-lg"
				>
					<div
						class="flex flex-col w-full justify-center items-center text-center md:text-left"
					>
						<h1
							class="my-4 max-lg:text-3xl text-5xl font-bold leading-tight text-center text-white"
						>
							¿Sueñas con un hogar? Nosotros te lo ofrecemos
						</h1>
						<p
							class="leading-normal text-2xl mb-8 lg:text-center max-lg:hidden max-xl:w-full w-1/2 text-white"
						>
							Ac Gabinete Inmobiliario. Expertos en la gestión de
							la compra-venta y alquiler de inmuebles
						</p>
					</div>
					<div
						class="w-full relative flex flex-col justify-center items-center"
					>
						<form
							action=""
							method="post"
							class="absolute p-8 bg-black/50 w-3/4"
						>
							<div class="flex justify-between gap-5">
								<button
									class="focus:border-red-600 focus:text-red-600 bg-white order-first text-ellipsis w-[25%] font-bold border-2 rounded-md"
									type="button">Venta</button
								>
								<select
									class="focus:border-red-600 focus:text-red-600 bg-white order-last w-[25%] font-bold border-2 rounded-md"
								>
									<option value="Alojamiento"
										>Alojamiento</option
									>
									<option value="Industrial"
										>Industrial</option
									>
								</select>
							</div>
							<div class="flex flex-col">
								<input
									type="text"
									name=""
									placeholder="¿Qué estas buscando?"
									class="focus:border-red-600 w-full my-5 bg-white rounded-md border-2"
								/>
								<input
									type="submit"
									class="bg-[#C22A24] text-2xl font-bold cursor-pointer w-1/2 m-auto text-white rounded-md"
									value="Buscar"
								/>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="mb-0 text-center text-3xl p-5">
			<h2
				class="text-center !text-3xl !text-slate-800 tokyo__text-border tokyo__text-border--black !mb-10"
			>
				Nuestro equipo
				<hr class="border-t-2 border-black w-1/2 mb-2 m-auto mt-4" />
				<hr class="border-t-2 border-black w-1/2 m-auto" />
			</h2>
			<div class="flex relative flex-wrap justify-center gap-10">
				<MembersCard />
			</div>
		</div>
	</div>
</Layout>
