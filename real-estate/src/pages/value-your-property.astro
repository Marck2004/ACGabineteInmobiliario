---
import FormButton from "@/components/FormButton.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
    <section class="grid grid-rows-2 p-10">
        <div>
            <h1 class="text-4xl">Valora tu inmueble</h1>
            <p>
                Aquí puedes enviarnos información sobre tu inmueble. La
                revisaremos lo antes posible.
            </p>
        </div>
        <form action="" method="post" class="grid grid-cols-2 p-5 w-full">
            <div class="w-1/3">
                <h1 class="text-2xl w-full">Datos de contacto</h1>
            </div>
            <div class="w-2/3">
                <h1 class="text-2xl">Datos del inmueble</h1>
            </div>
        </form>
        <FormButton children="Solicitar valoración" />
    </section>
</Layout>
